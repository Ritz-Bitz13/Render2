<h1>Contact List</h1>

<div class="row">
  <div class="row">
    <div class="col">

      <a href="/add" id="addButton1" class="btn btn-primary btn-sm mb-1"><i class="fa-solid fa-plus fa-sm"></i> Add Contact</a>

      <table class="table table-striped table-boarded table-hover">
        <thead class="table-dark">
        <tr>
          <th scope="col" class="text-center">#</th>
          <th scope="col">Full Name</th>
          <th scope="col">Contact Number</th>
          <th scope="col"> Email Address</th>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
        </thead>

          <% for(let count=0; count < contacts.length; count++) {%>
            <tr>
              <th scope="row" class="text-center"><% count + 1 %></th>
              <td><%= contacts[count].FullName %></td>
              <td><%= contacts[count].ContactNumber %></td>
              <td><%= contacts[count].EmailAddress %></td>
              <td class="text-center">
                <!--  Edit Button -->
                <a href="/edit/<%= contacts[count]._id %>" class="btn btn-primary btn-sm edit">
                  <i class="fa-solid fa-user-pen fa.sm"></i> Edit</a>
              </td>
              <!--  Delete Button -->
              <td class="text-center">
                <a href="/delete/<%= contacts[count]._id %>" class="btn btn-danger btn-sm danger delete">
                  <i class="fa-solid fa-trash-can"></i> Delete</a>
              </td>
            </tr>
              <% } %>

        </tbody>
      </table>
    </div>
  </div>
</div>